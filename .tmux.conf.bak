##################################
##            GENERAL           ##
##################################

# Enable powerline
set-environment -g POWERLINE_CONFIG_COMMAND /usr/local/bin/powerline-config
run-shell "powerline-daemon -q"
source "/usr/local/lib/python2.7/site-packages/powerline/bindings/tmux/powerline.conf"

# set default shell
set -g default-command /usr/local/bin/fish
set -g default-shell /usr/local/bin/fish

# set default terminal
set -g default-terminal "screen-256color"
set -g terminal-overrides 'xterm:colors=256'
setw -g xterm-keys on

# disable mouse support
setw -g mode-mouse off
set -g mouse-select-pane off
set -g mouse-resize-pane off
set -g mouse-select-window off

# Increase the repeat time
set -g repeat-time 1000

# redefine prefix
set -g prefix C-a
set -s escape-time 1

# start base index at 1 instead of 0
set -g base-index 1
setw -g pane-base-index 1

set -g renumber-windows on
setw -g automatic-rename

set -g history-limit 10000

set -g detach-on-destroy off
setw -g alternate-screen off

# use vim keybindings in copy mode
setw -g mode-keys vi

##################################
##          Bindings            ##
##################################

# source .tmux.conf
bind r source-file ~/.tmux.conf \; display "Sourcing..."

# send prefix through apps
bind C-a send-prefix

bind C new-window \; command-prompt "rename-window '%%'"

bind -r a last-window

# vim-like moving
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

bind -t vi-copy v begin-selection
bind -t vi-copy y copy-pipe "reattach-to-user-namespace pbcopy"
bind -t vi-copy Escape cancel
unbind -t vi-copy Enter
bind -t vi-copy Enter copy-pipe "reattach-to-user-namespace pbcopy"

# better window splitting
bind | split-window -h
bind - split-window -v

# pane resizing
bind -r H resize-pane -L 5
bind -r J resize-pane -D 5
bind -r K resize-pane -U 5
bind -r L resize-pane -R 5

# smart pane switching with awareness of vim splits
bind -n C-h run "(tmux display-message -p '#{pane_current_command}' | grep -iq vim && tmux send-keys C-h) || tmux select-pane -L"
bind -n C-j run "(tmux display-message -p '#{pane_current_command}' | grep -iq vim && tmux send-keys C-j) || tmux select-pane -D"
bind -n C-k run "(tmux display-message -p '#{pane_current_command}' | grep -iq vim && tmux send-keys C-k) || tmux select-pane -U"
bind -n C-l run "(tmux display-message -p '#{pane_current_command}' | grep -iq vim && tmux send-keys C-l) || tmux select-pane -R"
bind -n C-\ run "(tmux display-message -p '#{pane_current_command}' | grep -iq vim && tmux send-keys 'C-\\') || tmux select-pane -l"

unbind C-b

##################################
##              UI              ##
##################################

set-option -g status on                # turn the status bar on
set -g status-utf8 on
set -g status-position bottom
set -g status-interval 1

set -g status-keys vi

set -g bell-action none
set -g bell-on-alert off

set -g visual-activity on
setw -g monitor-activity on

# set color for status bar
set-option -g status-bg colour233 #base02
set-option -g status-fg yellow #yellow
set-option -g status-attr dim

