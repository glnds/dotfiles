[user]
  name = Gert Leenders
  email = leenders.gert@gmail.com
[core]
  editor = nvim
  autoctrl = input
  whitespace = space-before-tab, trailing-space
  excludesfile = /Users/glnds/.gitignore_global
[credential]
  helper = osxkeychain
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[merge]
  tool = vimdiff
  log = true
  conflictstyle = diff3
  ff = false
[push]
  default = simple
  followTags = true
[difftool "vimdiff"]
  cmd = vimdiff \"$LOCAL\" \"$REMOTE\"
  path = 
[mergetool "vimdiff"]
  cmd = vimdiff \"$LOCAL\" \"$MERGED\" \"$REMOTE\"
[gc "refs/remotes/*"]
  reflogExpire = 6 months
  reflogExpireUnreachable = 3 months
[branch]
  autosetuprebase = always
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[pull]
  ff = only
  rebase = true
[url "git@bitbucket.org:"]
  insteadOf = https://bitbucket.org/
