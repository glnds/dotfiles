[user]
  name = Gert Leenders
  email = leenders.gert@gmail.com
[core]
  editor = vim
  autoctrl = input
  whitespace = space-before-tab, trailing-space
[credential]
  helper = osxkeychain
[color]
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[merge]
  tool = vimdiff
  log = true
  conflictstyle = diff3
[push]
  default = simple
[difftool "sourcetree"]
  cmd = opendiff \"$LOCAL\" \"$REMOTE\"
  path = 
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[gc "refs/remotes/*"]
  reflogExpire = 6 months
  reflogExpireUnreachable = 3 months
