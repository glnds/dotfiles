[user]
	name = Gert Leenders
	email = leenders.gert@gmail.com
[core]
	editor = vim
	autoctrl = input
	whitespace = space-before-tab, trailing-space
[credential]
	helper = osxkeychain
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[merge]
	tool = vimdiff
	log = true
	conflictstyle = diff3
[push]
	default = simple
